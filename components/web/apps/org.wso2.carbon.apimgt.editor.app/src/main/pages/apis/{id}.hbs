    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-holder"
                 style="    padding-bottom: 10px;border-bottom: 1px solid darkcyan;box-shadow: 0px 13px 18px -18px black;">
                <div class="button-bar">
                    <ul class="nav nav-pills">
                        <li role="presentation" class="active"><a href="#overview-tab" aria-controls="overview-tab"
                                                                  role="tab" data-toggle="tab">&nbsp;Overview</a>
                        </li>
                        <li role="presentation"><a href="#lc-tab" aria-controls="lc-tab" role="tab" data-toggle="tab"><i
                                class="fw fw-lifecycle"></i>&nbsp;
